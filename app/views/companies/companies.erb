<h2>All Your Companies: </h2>

<% if Helpers.is_logged_in?(session) %>
  <ul>
    <% Company.all.each do |company| %>
      <% @user = User.find_by(id: session[:id]) %>
      <% if @user.companies.include?(company) %>

        <li><%= company.name %></li>
        <% company.products.each do |p| %>
          <%= p.name %>
        <% end %>
        <br><br>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <% redirect to '/login' %>
<% end %>
