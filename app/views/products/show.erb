<% if Helpers.is_logged_in?(session) %>

  <div class="box bigger_box">
    <h2>Product Name: <%= @product.name %></h2>

    <h3>Category: <span><%= @product.category %></span></h3>
    <h3>Countries of use: <span><%= @product.countries_of_use %></span></h3>
    <h3>Active Ingredients: <span><%= @product.active_ingredients %></span></h3>
    <h3>Product Application: <span><%= @product.product_application %></span></h3>

    <h3>Company:<span><%= @company.name %></span></h3>

    <% if Helpers.current_user(session) %>
      <form action="/products/<%= @product.slug %>/delete" method="post">
        <input type="hidden" name="_method" value="delete">
        <input class="form_buttons" type="submit" value="Delete Product">
        <a href="/products/<%= @product.slug %>/edit"><h3 class="form_buttons">Edit</h3></a>
      </form>
    <% end %>

  </div>
<% end %>
